<h3><%= @article.title %></h3>
<p><%= @article.content %></p>
<% if @comments %>
  <h3>Comments</h3>
 
  <% for comment in @comments do %>
    <p><strong><%=h(comment.user_id) %></strong>: <%=h comment.content %>
  <% end %>
<% end %>

<h3>Post Your Comment</h3>
<% form_for(Comment.new) do |form| %>
  <p><%= form.label :user_id %></p>
  <p><%= form.text_field :user_id %></p>
 
  <p><%= form.label :content, 'Comment' %></p>
  <p><%= form.text_area :content %></p>
 
  <%= form.submit 'Save' %>
<% end %>
<p><%= link_to 'back to Home', articles_path %></p>
